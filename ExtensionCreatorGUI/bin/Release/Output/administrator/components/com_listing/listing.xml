<?xml version="1.0" encoding="utf-8"?>
<extension
	type="component"
	version="3.2.0"
	method="upgrade">
	<name>COM_LISTING</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>12/25/2017 00:00:00</creationDate>
	<author>Krishan Rajaratnam</author>
	<authorEmail>kr.rajaratnam@mail.utoronto.ca</authorEmail>
	<authorUrl>http://krishanr.nfshost.com/</authorUrl>
	<copyright>Copyright (C) 2005 - 2016 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<!--  The version string is recorded in the components table -->
	<version>1.0.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>Lists articles from a category.</description>
	<files
		folder="site">
		<folder>models</folder>
		<folder>views</folder>
		<filename>index.html</filename>
		<filename>controller.php</filename>
		<filename>listing.php</filename>
	</files>
	<!-- Media files -->
	<media
		destination="com_listing"
		folder="media">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>index.html</filename>
	</media>
	<languages
		folder="site/language">
		<language
			tag="en-GB">en-GB.com_listing.ini</language>
	</languages>
	<!-- Runs on install/uninstall/update; New in 1.6 -->
	<scriptfile>script.php</scriptfile>
	<administration>
		<files
			folder="admin">
			<folder>assets</folder>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>index.html</filename>
		</files>
		<languages
			folder="admin/language">
			<language
				tag="en-GB">en-GB.com_listing.ini</language>
			<language
				tag="en-GB">en-GB.com_listing.sys.ini</language>
		</languages>
	</administration>
</extension>