<?xml version="1.0" encoding="utf-8"?>
<extension title="jBibHTML Plugin">
  <parameters>
    <plugin>
      <!-- If name is not specified, it is auto-generated using the nameType parameter. -->
      <label>jBibHTML</label>
      <group>content</group>
      <!-- The description is optional and defaults to the name -->
      <description>Bibtex plugin for Joomla.</description>
    </plugin>
    <loadTemplate from="joomla/plugin.xml" select="plugin/parameters/*" />
  </parameters>
  <tasks>
    <task name="Language">
      <parameters>
        <ran>true</ran>
      </parameters>
    </task>
    <task name="Main">
      <parameters>
        <ran>true</ran>
      </parameters>
    </task>
  </tasks>
  <loadTemplate from="joomla/plugin.xml" select="plugin/taskDefinitions" />
</extension>